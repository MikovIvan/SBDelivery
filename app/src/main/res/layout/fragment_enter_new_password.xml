<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background"
    android:gravity="center"
    tools:context=".ui.auth.recovery.EnterNewPasswordFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Enter new password"
        android:textColor="@color/color_et_hint"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="start" />

    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Password"
        android:textColor="@color/color_et_hint"
        android:textSize="12sp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/et_background"
        android:inputType="textPassword"
        android:paddingStart="14dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp" />


    <TextView
        android:id="@+id/tv_repeat_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Repeat password"
        android:textColor="@color/color_et_hint"
        android:textSize="12sp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="start" />

    <EditText
        android:id="@+id/et_repeat_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/et_background"
        android:inputType="textPassword"
        android:paddingStart="14dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/color_orange"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="Save"
        android:textSize="18sp" />

</LinearLayout>